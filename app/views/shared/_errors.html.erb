<% if resource&.errors.present? %>
<%= content_tag :div, class: 'resource-errors', data:  { resource_id: resource.id } do %>
  <h3><%= pluralize(resource.errors.count, 'error') %> detected:</h3>
  <ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<% end %>
