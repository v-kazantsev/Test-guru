<h2>Passing the <%= @test_passage.test.title %> Test
  (Question No <%= @test_passage.current_question_id %>
  out of <%= @test_passage.test.questions.count %>)</h2>
<b>
  <%= @test_passage.current_question.body %>
</b>
<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |f| %>
  <%= f.collection_check_boxes :answer_ids,
                               @test_passage.current_question.answers,
                               :id, :body, include_hidden: false do |b| %>
  <p>
    <%= b.check_box id: "answer_ids_#{b.object.id}" %>
    <%= b.label %>
  </p>
  <% end %>
  <p><%= f.submit 'Next' %></p>
<% end %>


<p><%= link_to 'К списку тестов', tests_path %></p>
